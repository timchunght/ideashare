
<% if false%>
<h1>Listing projects</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>img_url</th>
      <th>short_description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.img_url %></td>
        <td><%= project.short_description %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% end %>

<div class="row">
  <% @projects.each do |project| %>
  <div class="col-md-3">
    <div class="thumbnail">
      <img src=<%= project.img_url %> alt="...">
      <h3><%= link_to project.title, project.url %></h3>
      <p><%= project.short_description%></p>
      <p><%= button_to 'Unsave', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></p>
    </div>
  </div>
  <% end %>

</div>




